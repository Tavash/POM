var schemaTask = mongoose.Schema({
    libelle: String,
    date_debut: Date,
    date_fin: Date,
    statut : String,
    projet: mongoose.Schema.ObjectId,
    collaborateurs: [ mongoose.Schema.ObjectId ]
});

